<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bán hàng Online", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Mua Hàng", "ProductList", "Products")</li>
                    <li>@Html.ActionLink("Sản phẩm", "Index", "Products")</li>
                    <li>@Html.ActionLink("Loại SP", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "Customers")</li>
                    <li>@Html.ActionLink("Đơn hàng", "Index", "OrderProes")</li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <span>
                            <a href="/ShoppingCart/ShowCart">
                                <img src="@Url.Content("~/Content/images/cart2.png")" style="height:30px;width:30px;margin-top:10px" />
                            </a>
                        </span>
                        @Html.Action("BagCart", "ShoppingCart")
                    </li>
                    <li>
                        <a href="/LoginUser/RegisterUser"><span class="glyphicon glyphicon-user"></span>Đăng ký</a>
                    </li>
                    <li>
                        <a href="/LoginUser/Index"><span class="glyphicon glyphicon-log-in"></span>Đăng nhập</a>
                    </li>
                    <li>
                        <a href="@Url.Action("LogOutUser", "LoginUser")">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-2" style="background-color:lightgrey; min-height:600px">
                @*partial view (mục 7)*@
                @{ Html.RenderAction("CategoryPartial", "Categories");}
            </div>
            <div class="col-md-10" id="div-content">
                @RenderBody()
            </div>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
    <div>
        <div style="background-color: black; height:50px;text-align:center;padding:10px">
            <h4 style="color: yellow;"><b>&copy; @DateTime.Now.Year - Đề tài môn học LẬP TRÌNH WEB</b></h4>
        </div>
    </div>
</body>
</html>
