@model IEnumerable<DBSportStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loại sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo loại mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDCate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCate)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id = item.IDCate }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCate }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.IDCate })
        </td>
    </tr>
}

</table>
