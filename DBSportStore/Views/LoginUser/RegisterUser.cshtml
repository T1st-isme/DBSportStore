@using (Html.BeginForm("RegisterUser", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="login-box">
        <h2>Đăng Ký</h2>
        <form>
            <div class="user-box">
                @Html.EditorFor(model => model.ID)
                @Html.ValidationMessageFor(model => model.ID)
                <label>Mã tài khoản</label>

            </div>
            @if (ViewBag.ErrorRegister != null)
            {
                <p>@ViewBag.ErrorRegister</p>
            }

            <div class="user-box">
                @Html.EditorFor(model => model.NameUser)
                @Html.ValidationMessageFor(model => model.NameUser)
                <label>Tên tài khoản</label>

            </div>
            <div class="user-box">
                @Html.EditorFor(model => model.RoleUser)
                @Html.ValidationMessageFor(model => model.RoleUser)
                <label>Chức vụ</label>

            </div>
            <div class="user-box">
                @Html.EditorFor(model => model.PasswordUser)
                @Html.ValidationMessageFor(model => model.PasswordUser)
                <label>Mật khẩu </label>

            </div>
            <div class="user-box">
                @Html.EditorFor(model => model.ConfirmPass)
                @Html.ValidationMessageFor(model => model.ConfirmPass)
                <label>Nhập lại mật khẩu </label>

            </div>
            <button type="submit">Đăng ký</button>
        </form>
    </div>

}